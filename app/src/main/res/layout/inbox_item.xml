<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/topGuidLine"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_begin="4dp"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/leftGuidLine"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_begin="4dp"/>

            <ImageView
                    android:id="@+id/personImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@mipmap/happy_face"
                    android:scaleType="fitStart"
                    android:contentDescription="@string/content_description_person_name"
                    android:layout_centerVertical="true"
                    app:layout_constraintTop_toTopOf="@id/topGuidLine"
                    app:layout_constraintLeft_toRightOf="@id/leftGuidLine"
                    android:layout_marginStart="@dimen/default_margin"/>

            <TextView
                    android:id="@+id/personName"
                    tools:text="Person Name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/personImage"
                    app:layout_constraintLeft_toRightOf="@id/personImage"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginTop="@dimen/default_margin"/>

            <TextView
                    android:id="@+id/lastMessage"
                    android:text="@{inbox.personName}"
                    tools:text="the last message from the communication"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorTextLastMessage"
                    android:textSize="@dimen/fontSizeLastMessage"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/personName"
                    app:layout_constraintLeft_toLeftOf="@id/personName"
                    android:layout_marginTop="@dimen/default_margin"/>

            <TextView
                    android:id="@+id/textMessageDate"
                    android:text="@{inbox.personName}"
                    tools:text="the date"
                    android:layout_height="64dp"
                    android:layout_width="64dp"
                    android:textColor="@color/colorTextLastMessage"
                    android:textSize="@dimen/fontSizeLastMessageDate"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/personName"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="@dimen/default_margin"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
